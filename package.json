{
  "name": "snowpack-react-starter",
  "version": "0.0.0-dev",
  "private": true,
  "scripts": {
    "dev": "snowpack dev",
    "start": "snowpack dev",
    "build": "sh Taskfile build",
    "eslint": "node node_modules/eslint/bin/eslint \"src/**/*.{ts,tsx}\"",
    "eslint:fix": "npm run eslint -- --fix",
    "test": "npm run eslint && npm run test:cov",
    "test:r": "web-test-runner src/**/*.test.tsx --node-resolve",
    "test:w": "npm run test:r -- --watch",
    "test:cov": "npm run test:r -- --coverage",
    "tscheck:w": "tsc --watch --noEmit",
    "format": "prettier --write ."
  },
  "dependencies": {
    "core-js": "^3.8.3",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "recoil": "^0.1.2"
  },
  "devDependencies": {
    "@snowpack/plugin-postcss": "^1.1.0",
    "@snowpack/plugin-react-refresh": "^2.4.0",
    "@snowpack/plugin-webpack": "^2.3.0",
    "@snowpack/web-test-runner-plugin": "^0.2.1",
    "@testing-library/react": "^11.2.3",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/snowpack-env": "^2.3.3",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "@web/test-runner": "^0.12.6",
    "cssnano": "^4.1.10",
    "cssnano-preset-default": "^4.0.7",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-etc": "^1.1.8",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-only-warn": "^1.0.2",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-regexp": "^0.1.1",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-sonarjs": "^0.5.0",
    "eslint-plugin-sort-class-members": "^1.9.0",
    "eslint-plugin-total-functions": "^4.7.2",
    "eslint-plugin-unicorn": "^27.0.0",
    "eslint-plugin-wix-editor": "^3.2.0",
    "expect": "^26.6.2",
    "postcss": "^8.2.4",
    "postcss-center": "^1.1.0",
    "postcss-cli": "^8.3.1",
    "prettier": "^2.2.1",
    "snowpack": "^3.0.11",
    "tailwindcss": "^2.0.2",
    "typescript": "^4.1.3"
  }
}
